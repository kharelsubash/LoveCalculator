<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="np.com.gnikesh.LoveCalculator.MainClassActivity">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/fDOB">
        <Spinner
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:minHeight="50dp"
            android:minWidth="90dp"
            android:id="@+id/spinnerMonth"
            android:spinnerMode="dropdown"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Spinner
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/spinnerDate"
            android:spinnerMode="dropdown"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/spinnerMonth"
            android:layout_toEndOf="@+id/spinnerMonth"
            android:minHeight="50dp"
            android:minWidth="90dp"/>

        <Spinner
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/spinnerYear"
            android:spinnerMode="dropdown"
            android:layout_alignBottom="@+id/spinnerDate"
            android:layout_toRightOf="@+id/spinnerDate"
            android:layout_toEndOf="@+id/spinnerDate"
            android:minHeight="50dp"
            android:minWidth="0dp" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date of Birth: "
        android:layout_below="@+id/fNameInput"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:id="@+id/fDOB"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Name: "
        android:id="@+id/fName"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/letsStartText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:id="@+id/fNameInput"
        android:background="@drawable/edit_text_layout"
        android:layout_below="@+id/fName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lets Start"
        android:textSize="60dp"
        android:id="@+id/letsStartText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/sDOB"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <Spinner
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:minWidth="90dp"
                android:id="@+id/sSpinnerMonth"
                android:spinnerMode="dropdown"
                android:layout_gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <Spinner
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id="@+id/sSpinnerDate"
                android:spinnerMode="dropdown"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/spinnerMonth"
                android:layout_toEndOf="@+id/spinnerMonth"
                android:minHeight="50dp"
                android:minWidth="90dp"/>

            <Spinner
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id="@+id/sSpinnerYear"
                android:spinnerMode="dropdown"
                android:layout_alignBottom="@+id/spinnerDate"
                android:layout_toRightOf="@+id/spinnerDate"
                android:layout_toEndOf="@+id/spinnerDate"
                android:minHeight="50dp"
                android:minWidth="90dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date of Birth: "
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:id="@+id/sDOB"
            android:textColor="@color/black"
            android:layout_below="@+id/sNameInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Partner's Name: "
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:id="@+id/sName"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
             />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:id="@+id/sNameInput"
            android:background="@drawable/edit_text_layout"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/sName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textStyle="bold"
        android:textSize="28sp"
        android:background="@drawable/edit_text_layout"
        android:id="@+id/calculateButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
